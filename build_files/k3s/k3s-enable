#!/usr/bin/bash
set -euo pipefail

ROLE="$1"

mkdir -p /etc/k3s
touch /etc/k3s/enabled
echo "$ROLE" > /etc/k3s/role

case "$ROLE" in
  server)
    systemctl enable k3s-server.service
    ;;
  agent)
    systemctl enable k3s-agent.service
    ;;
  *)
    echo "Usage: k3s-enable {server|agent}"
    exit 1
esac

echo "K3S role '$ROLE' enabled. Reboot or start the service."

